{
    "name": "binsoul/common-i18n",
    "description": "Common I18n related classes and interfaces",
    "keywords": [
        "common",
        "i18n"
    ],
    "homepage": "https://github.com/binsoul/common-i18n",
    "license": "MIT",
    "authors": [
        {
            "name": "Sebastian Mößler",
            "email": "code@binsoul.de",
            "homepage": "https://github.com/binsoul",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2",
        "phpstan/phpstan": "^0.11",
        "phpunit/phpunit": "^8"
    },
    "autoload": {
        "psr-4": {
            "BinSoul\\Common\\I18n\\": "src"
        },
        "exclude-from-classmap": [
            "/tests/"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "BinSoul\\Test\\Common\\I18n\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "fix-style": [
            "php-cs-fixer fix src --rules=@Symfony,-yoda_style",
            "php-cs-fixer fix tests --rules=@Symfony,-yoda_style"
        ],
        "analyze": "phpstan analyse -l 7 src"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
